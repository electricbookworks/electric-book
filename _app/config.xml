---
layout: min
---

{% include metadata %}

<?xml version='1.0' encoding='utf-8'?>
<widget id="{{ project-app-id }}" version="{{ project-version }}" windows-packageVersion="{{ series-version }}.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" defaultlocale="{{ project-language }}">
    <name>{{ project-name }}</name>
    <description>
        {{ project-description }}
    </description>
    <author email="team@fireandlion.com" href="https://fireandlion.com/">
        {{ project-organisation }}
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/icon.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res/icon.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="EnableViewportScale" value="true"/>
    </platform>
    <platform name="windows">
        <icon src="res/icon.png" />
        <preference name="windows-target-version" value="10.0" />
        <preference name="WindowsStoreIdentityName" value="{{ site.data.secrets.windows.package-identity-name }}" />
    </platform>
    <engine name="android" spec="~6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="ios" spec="~4.4.0" />

    {% comment %} Let expansion file paths dodge whitelist-plugin restrictions {% endcomment %}
    {% if site.data.settings.google-play-expansion-file-enabled == true %}
    <allow-intent href="*" />
    <access origin="*" />
    <access origin="content:///*" />
    <access origin="cdvfile:///*" />
    <plugin name="com.flyingsoftgames.xapkreader" spec="https://github.com/agamemnus/cordova-plugin-xapkreader.git#cordova-6.5.0">
        <variable name="XAPK_PUBLIC_KEY" value="{{ site.data.settings.google-play-public-api-key }}" />
        <variable name="XAPK_EXPANSION_AUTHORITY" value="{{ project-app-id }}.expansion" />
    </plugin>
    {% endif %}

</widget>
